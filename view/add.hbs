<style>
    body{
             display: flex;
             flex-direction:column;
             margin:2px;
             }
             .main
             {
                display: flex;
               justify-content: space-around;
             }
             .main{
                 font-size: 15px;
                 font-weight: bolder;
                 color:black;
             }
</style>
    <div class="main">
        
        <form action="/addinfo">
            <h1>Enter Athlete Information</h1><br>
            <label for="athlete_id">Player ID</label>
            <input type="text" name="athlete_id" id="athlete_id" placeholder="Player id" required>

            <label for="name">Name</label>
            <input type="text" name="name" id="name" placeholder="Enter your name" required>

            <label for="phn">Contact Number</label>
            <input type="text" name="phone" id="phone" placeholder="Contact No" required>
            
            <label for="eml-id">Email id</label>
            <input type="text" name="email" id="email" placeholder="Email-id" required>

            <label for="sport">Sport Group</label>
            <input type="text" name="sport" id="sport" placeholder="sport" required>

            <div class="gender_g">
                <label for="gender_g">Gender</label>
                <input type="radio" name="gender" id="" value="Male"> Male 
                <input type="radio" name="gender" id=""  value="Female">  Female
            </div>
            
            <button type="submit" class="registerbtn">Add Information</button>
            <a href="./" style="color:black">BACK TO HOME PAGE</a> 
            
            {{#if mesg}}
                <h3>Data Inserted Succesfully</h3>
            {{/if}}

            {{#if checkmesg}}
                <h3 style="color: red;">!!Emailid or Phone no already present</h3>
            {{/if}}
                </form>

    </div>

</body>

